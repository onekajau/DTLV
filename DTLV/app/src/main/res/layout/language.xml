<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="57dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="44dp"
            android:layout_height="280dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:background="#ffffff"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="527dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="481dp"
                android:layout_height="38dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Choix de la langue"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:background="#ffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="274dp"
                android:layout_height="183dp"
                android:layout_gravity="left|center_vertical">

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Francais (France)"
                    android:id="@+id/langueFrFra"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Francais (Canada)"
                    android:id="@+id/langueFrCana"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Español"
                    android:id="@+id/langueEsp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="267dp"
                android:layout_height="182dp"
                android:layout_gravity="right|center_vertical">

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="English (UK)"
                    android:id="@+id/langueEngUk"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="English (USA)"
                    android:id="@+id/langueEngUs"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="中文"
                    android:id="@+id/langueChin"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>