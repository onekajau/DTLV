<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/blueBackground">
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="150dp"
        android:id="@+id/test1_image1"
        android:src="@drawable/test1_image1"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/validate1"
        android:src="@drawable/validate"
        android:background="@null"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/refuse1"
        android:src="@drawable/refuse"
        android:background="@null"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="150dp"
        android:id="@+id/test1_image2"
        android:src="@drawable/test1_image2"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/validate2"
        android:src="@drawable/validate"
        android:background="@null"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/refuse2"
        android:src="@drawable/refuse"
        android:background="@null"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="150dp"
        android:id="@+id/test1_image3"
        android:src="@drawable/test1_image3"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/validate3"
        android:src="@drawable/validate"
        android:background="@null"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="215dp"
        android:id="@+id/refuse3"
        android:src="@drawable/refuse"
        android:background="@null"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"

        android:layout_gravity="bottom"
        android:id="@+id/test1_image4"
        android:src="@drawable/test1_image4"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/validate4"
        android:src="@drawable/validate"
        android:background="@null"
        android:layout_below="@id/validate1"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/refuse4"
        android:src="@drawable/refuse"
        android:background="@null"
        android:layout_below="@id/refuse1" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_arrow"
        android:src="@drawable/back_arrow"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@null"/>

</LinearLayout>